package com.abc.tripbookingservice.repository;


import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import com.abc.tripbookingservice.entity.TripBooking;



public interface TripBookingRepository extends JpaRepository<TripBooking,Integer>  {


	@Query("SELECT b FROM Booking b WHERE b.customerId=:customerId")
	List<TripBooking> getAllBookingsByCustomer(@Param("customerId") int customerId);
}

